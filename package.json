{
	"name": "tamachi-gatsby",
	"version": "0.5.0",
	"description": "Gatsby site for documentation or blogging",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "npm run dev",
		"build": "npm run clean && npm run test && gatsby build",
		"build:demo": "npm run clean && npm run test && env USE_DEMO=yes gatsby build --prefix-paths",
		"clean": "rm -rf public",
		"dev": "gatsby develop --port 3000",
		"dev:demo": "env USE_DEMO=yes npm run dev",
		"docker": "docker-compose up -d",
		"docker:recreate": "docker-compose down && docker-compose build --no-cache && docker-compose up",
		"docker:stop": "docker-compose down",
		"serve": "gatsby serve --port 3000 -H 0.0.0.0",
		"test": "npm run test:types && npm run test:lint && npm run test:prettier",
		"test:types": "tsc",
		"test:lint": "eslint \"**/*.{js,ts,tsx}\"",
		"test:prettier": "prettier --check \"**/*.{js,ts,tsx,json,html}\"",
		"prettier": "prettier --write \"**/*.{js,ts,tsx,json,html}\"",
		"deploy": "npm run build:demo && gh-pages -d public"
	},
	"dependencies": {
		"@mdx-js/mdx": "^1.6.22",
		"@mdx-js/react": "^1.6.22",
		"@types/lodash.throttle": "^4.1.6",
		"@types/mdx-js__react": "^1.5.3",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-helmet": "^6.1.1",
		"@types/remove-markdown": "^0.3.0",
		"@types/uuid": "^8.3.0",
		"copy-text-to-clipboard": "^3.0.1",
		"fuse.js": "^6.4.6",
		"gatsby": "^3.2.1",
		"gatsby-alias-imports": "^1.0.6",
		"gatsby-plugin-layout": "^2.2.0",
		"gatsby-plugin-manifest": "^3.2.0",
		"gatsby-plugin-mdx": "^2.2.0",
		"gatsby-plugin-offline": "^4.2.0",
		"gatsby-plugin-react-helmet": "^4.2.0",
		"gatsby-plugin-sharp": "^3.2.1",
		"gatsby-plugin-stylus": "^3.2.0",
		"gatsby-plugin-typescript": "^3.2.0",
		"gatsby-plugin-zopfli": "^2.0.0",
		"gatsby-remark-images": "^4.2.0",
		"gatsby-remark-prismjs": "^4.2.0",
		"gatsby-remark-unwrap-images": "^1.0.2",
		"gatsby-source-filesystem": "^3.2.0",
		"gatsby-transformer-remark": "^3.2.0",
		"lodash.throttle": "^4.1.1",
		"prismjs": "^1.23.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-helmet": "^6.1.0",
		"react-scrollbars-custom": "^4.0.25",
		"remove-markdown": "^0.3.0",
		"stylus": "^0.54.8",
		"typescript": "^4.2.4",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.23.2",
		"gh-pages": "^3.1.0",
		"prettier": "^2.2.1"
	}
}
