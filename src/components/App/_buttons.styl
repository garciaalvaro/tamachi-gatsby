/**
 * App - Buttons
 */

button
	cursor pointer

	&
	&:focus
	&:hover
		background none
		box-shadow none
		outline none
		border none
		padding 0
		font-size inherit
		font-weight inherit
		font-style inherit
		font-family inherit
		line-height inherit
		color inherit
		text-align inherit

a:focus
	outline none
