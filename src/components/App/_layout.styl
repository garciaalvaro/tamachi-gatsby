/**
 * App - Layout
 */

*
*:before
*:after
	box-sizing border-box

html
body
#___gatsby
#gatsby-focus-wrapper
#page
	width 100%
	height 100%
	margin 0

body
	overflow hidden

	::selection
		background-color var(--color_085)
		color var(--background_color)

#page
	display flex

#gatsby-focus-wrapper
	position relative

	a
	a:hover
	a:focus
	a:visited
		color inherit
		text-decoration none
