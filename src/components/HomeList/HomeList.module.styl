/**
 * HomeList
 */

.container
	margin 0
	padding 0
	list-style none

.item

	h1
		margin 0

	a
		display block
		position relative
		padding 1.7em 3.4em
		font-family 'Roboto Condensed'
		font-size 2.8rem
		font-weight 300
		line-height 1.2
		transition background-color .05s $e_deceleration

		&:before
			content ""
			position absolute
			bottom 0
			left 0
			width 100%
			height .1rem
			background-color currentColor
			opacity .1
			transition opacity .05s $e_deceleration

			&:hover:before
				opacity .3

	a:hover
		background-color var(--color_007)
		transition background-color .1s $e_deceleration

@media screen and (max-width: 768px)

	.item a
		padding 1.7em
