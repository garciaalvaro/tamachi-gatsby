/**
 * Container
 */

.use_border
	position relative

	&:before
		content ""
		position absolute
		border 1px solid
		opacity .1
		width 100%
		height 100%
		top 0
		left 0
		z-index 1

div.full_width
	margin-top $layout_padding
	max-width none
	width "calc(100vw - %s)" % $sidebar_width
	margin-left -($layout_padding)

	@media screen and (max-width: 1024px)

		&
			width "calc(100vw - %s)" % $sidebar_width_responsive

	@media screen and (max-width: 768px)

		&
			width 100vw

	@media screen and (max-width: 600px)

		&
			width 100vw
			margin-left -($layout_padding)
